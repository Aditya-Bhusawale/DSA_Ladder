  <link rel="stylesheet" href="/css/submission.css">
</head>
<body style="background-color: #0f0f0f; color: white;">

    <%- include("../includes/navbar.ejs")%>

  <div class="d-flex justify-content-center align-items-center" style="min-height: 40vh;">
    <div class="submission-box p-4 rounded shadow">
      <h2 class="text-center mb-4">ðŸ“„ My Submissions</h2>

      <% if (questions.length === 0) { %>
        <p class="text-center text-muted">No submissions yet.</p>
      <% } else { %>
        <ul class="list-group list-group-flush">
          <% for (let title of questions) { %>
