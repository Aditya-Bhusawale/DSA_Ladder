<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Profile - DSA Ladder</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome for Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/profile.css">
</head>

<body style="background-color: #0f0f0f; color: white;">

    <%- include("./includes/navbar.ejs")%>

  <div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="profile-box p-4 rounded shadow text-center">

      <!-- Username -->
      <p class="text-muted">@<%= user.username %></p>

      <!-- Profile Info -->
      <div class="profile-info mt-4 text-start">
        <p><i class="fas fa-envelope me-2"></i>Email: <strong><%= user.email %></strong></p>
        <p><i class="fas fa-code me-2"></i>Language: <strong><%= user.language || 'C++' %></strong></p>
        <p><i class="fas fa-check me-2"></i>Problems Solved: <strong><%= user.submissions.length %></strong></p>
        <p><i class="fas fa-calendar-alt me-2"></i>Joined: <strong>7 May 2024</strong></p>
      </div>

      <!-- Edit Button -->
      <a href="/edit-profile" class="btn btn-edit mt-4">
        <i class="fas fa-pen"></i> Edit Profile
      </a>

    </div>
  </div>
</body>
</html>
